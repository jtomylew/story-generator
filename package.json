{
  "name": "story-generator",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "//": "— Core dev/build (keep your existing ones) —",
    "dev": "next dev",
    "dev:safe": "cd \"/Users/jonathanlewis/Library/Mobile Documents/com~apple~CloudDocs/Coding_Projects/story-generator\" && npm run dev",
    "build": "next build",
    "start": "next start",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "//:checks": "— Duplicate & drift guards —",
    "ban:raw-primitives": "grep -R \"<\\(button\\|input\\|select\\|textarea\\)\\b\" components --include='*.tsx' | grep -v '/ui/' || true",
    "find:strays": "grep -R \"from ['\\\"]@/components/[^'\\\"]\" components src --include='*.ts' --include='*.tsx' || true",
    "find:duplicates": "find components -type f \\( -name '*.tsx' -o -name '*.ts' \\) -not -name 'index.ts' -print0 | xargs -0 -I {} basename {} | sort | uniq -d",
    "find:similar": "grep -R \"export\\s\\+\\(default\\s\\+\\)\\?function\\s\\+.*\\(Form\\|Card\\|Button\\|Field\\)\" components --include='*.tsx' | cut -d: -f1 | sort | uniq",
    "//:pipelines": "— Preflight gate before PRs —",
    "verify:prompts": "node ./scripts/verify-prompts-and-validation.mjs",
    "preflight": "npm run typecheck && npm run lint && npm run format:check && npm run ban:raw-primitives && npm run find:strays && npm run find:duplicates && (npm run storybook:check || echo '⚠️ Storybook compatibility issues detected - this is expected and not a build failure')",
    "preflight:full": "npm run typecheck && npm run lint && npm run format:check && npm run ban:raw-primitives && npm run find:strays && npm run find:duplicates && npm run storybook:check",
    "prepush": "npm run typecheck && npm run verify:prompts",
    "test:prompts": "node scripts/test-prompt-pipeline.mjs",
    "test:rss": "npx tsx scripts/test-rss-parser.ts",
    "test:aggregation": "npx tsx scripts/test-aggregation.mjs",
    "test:feed-api": "node scripts/test-feed-api.mjs",
    "test:feed-refresh": "node scripts/test-feed-refresh.mjs",
    "//:storybook-reinstall": "— Reinstall Storybook when compatibility issues are resolved —",
    "storybook:check": "./scripts/check-storybook-compatibility.sh",
    "storybook:check:full": "./scripts/check-storybook-compatibility-full.sh",
    "storybook:install": "./scripts/install-storybook.sh",
    "prepare": "husky install"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@subframe/core": "^1.145.0",
    "@supabase/supabase-js": "^2.57.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.544.0",
    "next": "^15.5.3",
    "openai": "^5.15.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "rss-parser": "^3.13.0",
    "server-only": "^0.0.1",
    "styled-jsx": "^5.1.7",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@babel/types": "^7.28.4",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.12",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "husky": "^8.0.0",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
